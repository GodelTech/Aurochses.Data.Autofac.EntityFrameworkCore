<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PackageId>GodelTech.Data.Autofac.EntityFrameworkCore</PackageId>
    <VersionPrefix>1.0.0-rc.2</VersionPrefix>
    <Authors>v.rodchenko</Authors>
    <Company>Godel Technologies</Company>
    <Description>Library for using Autofac in modules with Entity Framework Core.</Description>
    <Copyright>Godel Technologies 2020</Copyright>
    <PackageLicenseUrl>https://github.com/GodelTech/GodelTech.Data.Autofac.EntityFrameworkCore/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/GodelTech/GodelTech.Data.Autofac.EntityFrameworkCore/wiki</PackageProjectUrl>
    <PackageIconUrl>https://www.gravatar.com/avatar/839234621070de51e7b9cabd5ceee8fe?s=64</PackageIconUrl>
    <RepositoryUrl>https://github.com/GodelTech/GodelTech.Data.Autofac.EntityFrameworkCore</RepositoryUrl>
    <PackageTags>Autofac Data Business Module Entity Framework Core</PackageTags>

    <!-- XML documentation -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Source Link needs this -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- SonarQube needs this -->
    <ProjectGuid>{00000000-0000-0000-0000-000000000001}</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="5.2.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.5" />

    <!-- Source Link needs this -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All"/>
  </ItemGroup>

</Project>
